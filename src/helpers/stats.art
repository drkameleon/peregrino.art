hasOutliers?: function [smpl, avg, dev][
    tripledev: 3 * dev

    positive? enumerate smpl 'sv [
        not? between? sv (avg - tripledev) (avg + tripledev)
    ]
]

getStats: function [smpl][
    avg: average smpl
    dev: deviation.sample smpl
    return #[
        data: #[
            avg: avg
            dev: dev
            min: min smpl
            max: max smpl
        ]
        outliers?: hasOutliers? smpl avg dev 
    ]
]