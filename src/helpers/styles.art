_tbl: #[
    normal: #[
        topLeft: "╔" topRight: "╗" bottomLeft: "╚" bottomRight: "╝"
        horLine: "═"  verLine: "║"      cross: "╬"
          tLeft: "╠"   tRight: "╣"       tTop: "╦"     tBottom: "╩"
    ]
    ascii: #[
        topLeft: "+" topRight: "+" bottomLeft: "+" bottomRight: "+"
        horLine: "-"  verLine: "|"      cross: "+"
          tLeft: "+"   tRight: "+"       tTop: "+"     tBottom: "+"
    ]
    markdown: #[
        topLeft: "|" topRight: "|" bottomLeft: "|" bottomRight: "|"
        horLine: "-"  verLine: "|"      cross: "|"
          tLeft: "|"   tRight: "|"       tTop: "|"     tBottom: "|"
    ]
]

_elements: #[
    normal: #[
        dot: "•"    horLine: "━"    timer: "⏱"
    ]
    ascii: #[
        dot: ">"    horLine: "="    timer: " "
    ]
]